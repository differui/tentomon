// be-even($unit)
//
// + `$unit` `unit`
//
// Styleguide 1.3.1
be-even($unit)
  $rounded = round($unit)

  if even($rounded) isnt true
    return $rounded - 1
  else
    return $rounded

// be-odd($unit)
//
// + `$unit` `unit`
//
// Styleguide 1.3.2
be-odd($unit)
  $rounded = round($unit)

  if odd($rounded) isnt true
    return $rounded + 1
  else
    return $rounded
