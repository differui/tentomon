// $$be_even($unit)
//
// + `$unit` `unit`
//
// Styleguide 1.3.1
$$be_even($unit)
  $rounded = round($unit)

  if even($rounded) isnt true
    return $rounded - 1
  else
    return $rounded

// $$be_odd($unit)
//
// + `$unit` `unit`
//
// Styleguide 1.3.2
$$be_odd($unit)
  $rounded = round($unit)

  if odd($rounded) isnt true
    return $rounded + 1
  else
    return $rounded


