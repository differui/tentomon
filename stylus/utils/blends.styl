// $$inner-grow($color, $length)
//
// Component inner grow effect by `box-shadow`
//
// + `$color` `rgba`
// + `$length` `unit` Grow spread length
//
// Styleguide 1.2.1
$$inner-grow($color, $length)
  ensure($color, 'rgba')

  box-shadow 0 0 unit($length * -1, 'px') $color

// $$outer-grow($color, $length)
//
// Component outer grow effect by `box-shadow`
//
// + `$color` `rgba`
// + `$length` `unit` Grow spread length
//
// Styleguide 1.2.2
$$outer-grow($color, $length)
  ensure($color, 'rgba')

  box-shadow 0 0 unit($length, 'px') $color

// $$highlight-emboss-text($color)
//
// Emboss text effect by `text-shadow` assign highlight color as second color
//
// + `$color` `rgba` Highlight color default is `$translucent-white`
//
// Styleguide 1.2.3
$$highlight-emboss-text($color = $translucent-white)
  text-shadow 0 1px 0 $color

// $$shadow-emboss-text($color)
//
// Emboss text effect by `text-shadow` assign shadow color as second color
//
// + `$color` `rgba` Shadow color default is `$translucent-black`
//
// Styleguide 1.2.4
$$shadow-emboss-text($color = $translucent-black)
  text-shadow 0 -1px 0 $color

// $$top-inner-shadow($deep, $length, $color)
//
// Vertical component inner shadow
//
// + `$deep` `unit` Shadow deep default is 2
// + `$length` 'unit' Length of shadow spread default is 4
// + `$color` `rgba` Shadow color default is `$translucent-black`
//
// Styleguide 1.2.5
$$top-inner-shadow($deep = 2, $length = 4, $color = $translucent-black)
  box-shadow inset 0 unit($deep, 'px') unit($length, 'px') $color

