// UI name
// ============================================================================
$ui-name                     = "tentomon-light-ui"

// Majority size
// ============================================================================
$te                          = 14px
$te-half                     = round($te * 0.5)
$te-quarter                  = round($te * 0.25)
$te-small                    = round($te * 0.857)
$te-smaller                  = round($te * 0.714)
$te-large                    = round($te * 1.1)
$te-larger                   = round($te * 1.29)

// Line height
// ============================================================================
$te-line                     = 1.714
$te-line-computed            = round($te * $te-line)

// Component apperance
// ============================================================================
$bd-radius                   = 3px

$bd-width                    = 1px
$bd-width-bold               = $bd-width * 2

$gap-v                       = $te-quarter
$gap-h                       = $te-small

$gap-h-half                  = round($gap-h / 2)
$gap-h-double                = round($gap-h * 2)
$gap-h-triple                = round($gap-h * 3)

$gap-v-half                  = round($gap-v / 2)
$gap-v-double                = round($gap-v * 2)
$gap-v-triple                = round($gap-v * 3)

$column-single               = 20%
$column-double               = $column-single * 2

// Component padding and height
// ============================================================================
$tf-height                   = 16px
$content-height              = max($te-line-computed, $tf-height)

// Default component padding make up component inner height.
// ============================================================================
$content-pd-diff             = $content-height - $tf-height
$content-pd-diff-half        = round($content-pd-diff / 2)

// Component vertical padding in different size.
// ============================================================================
$pd-normal                   = $content-pd-diff-half + $gap-v
$pd-massive                  = $pd-normal + $gap-v * 2
$pd-huge                     = $pd-normal + $gap-v * 1
$pd-mini                     = $pd-normal + $gap-v * -1 + 2
$pd-pygmy                    = $pd-normal + $gap-v * -2 + 3

// Component height in different size.
// ============================================================================
$ht-normal                   = $tf-height + ($bd-width + $pd-normal)  * 2
$ht-massive                  = $tf-height + ($bd-width + $pd-massive) * 2
$ht-huge                     = $tf-height + ($bd-width + $pd-huge)    * 2
$ht-mini                     = $tf-height + ($bd-width + $pd-mini)    * 2
$ht-pygmy                    = $tf-height + ($bd-width + $pd-pygmy)   * 2

// Vertical layer index.
// ============================================================================
$idx-top                     = 3000
$idx-middle                  = 2000
$idx-bottom                  = 1000
