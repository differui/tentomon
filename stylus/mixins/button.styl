// $$button($brand-color)
//
// Generate button skin by designated color
//
// + `$brand-color` `rgba` Deisgnate main tone for button
//
// Styleguide 1.3.1
$$button($brand-color)
  $start                     = $brand-color
  $end                       = $$dark($brand-color)
  $border-color              = $$darker($brand-color)

  // different style with primary and modifiers buttons
  if $brand-color is $main-brand
    $$highlight-emboss-text()
  else
    $start                   = $$lighter($start)
    $end                     = $$darker($end)
    $$shadow-emboss-text(, $end)

  // skin
  color $white unless $brand-color is $main-brand
  border-color $border-color
  
  $$linear-gradient($start, $end)

  &:hover
    $hover-start             = darken($start, 5%)
    $hover-end               = darken($end, 10%)

    $$linear-gradient($hover-start, $hover-end)

  &:focus
    $$outer-grow($border-color, 5px)

  &:active
    $$top-inner-shadow(, , $border-color)

  &.selected
    $$top-inner-shadow(, , $border-color)

  &:disabled
    $disabled-start          = lighten($start, 45%)
    $disabled-end            = lighten($end, 45%)

    cursor default
    border-color lighten($border-color, 45%)

    // different fore color between primary and modifiers buttons
    if $brand-color is $main-brand
      color $grey
    else
      color lighten($brand-color, 90%)

    // override
    $$linear-gradient($disabled-start, $disabled-end)
    $$top-inner-shadow(0, 0)