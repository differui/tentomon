/* majority color variables
   ===================================================================== */

// relative color (used in native color mixin)
$dark-deg                            = 8%
$light-deg                           = 8%
$darker-deg                          = 13%
$lighter-deg                         = 13%

// five main color
$main-brand                          = rgb(250, 250, 250)
$ok-brand                            = rgb(96, 176, 68)
$warn-brand                          = rgb(255, 201, 14)
$danger-brand                        = rgb(209, 68, 61)
$info-brand                          = rgb(80, 140, 199)

// three grey color
$grey                                = rgb(221, 221, 221)
$white                               = rgb(255, 255, 255)
$black                               = rgb(51, 51, 51)

// components color
$translucent-white                   = rgba(255, 255, 255, 0.9)
$translucent-black                   = rgba(0, 0, 0, 0.4)

$light-shadow                        = $$translucent($brand-color, 10%)
$heavy-shadow                        = $$translucent($brand-color, 50%)

/* majority size/length variables
   ===================================================================== */

// font size system
$py                                  = 14px
$py-half                             = $py * 0.5
$py-quarter                          = $py * 0.25
$py-smaller                          = $py * 0.9
$py-larger                           = $py * 1.2

// line height
$py-line                             = 1.7
$py-line-computed                    = $py * $py-line

// components size
$border-radius                       = 3px
$gap-vertical                        = $py-quarter
$gap-horizontal                      = $py-smaller

$breakpoints                         = \
  'min-width: 24em' 'small',
  'min-width: 36em' 'med',
  'min-width: 48em' 'large'