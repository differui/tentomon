// Styleguide 5.2.4
.pagination
  @extend $GROUP

  border-style solid none
  border-width $border-width
  border-radius 0

.pagination-item
  @extend $GROUP-ITEM

  .btn
    border-style none
    border-radius 0

.pagination
  &.basis-static .pagination-item
    @extend $GROUP-ITEM-BASIS

  &.info-static .pagination-item
    @extend $GROUP-ITEM-INFO

  &.safe-static .pagination-item
    @extend $GROUP-ITEM-SAFE

  &.danger-static .pagination-item
    @extend $GROUP-ITEM-DANGER

  &.warn-static .pagination-item
    @extend $GROUP-ITEM-WARN
