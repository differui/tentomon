// Foundation
//
// Helpers, Variables, Templates, Mixins foundation of project.
//
// Styleguide 1

// Color Helpers
//
// Styleguide 1.1
@import "utils/colors"

// Blend Mode Helpers
//
// Styleguide 1.2
@import "utils/blends"

// Gerenate State Selectors
//
// Styleguide 1.3
@import "utils/selector"

// Templates
//
// Templates build on stylus mixin and with `$` as prefix and suffix.
//
// Styleguide 1.3
@import "templates/reset"
@import "templates/center"
@import "templates/flex"

// Mixins
//
// Styleguide 1.4

// Plugins
//
// + **normalize.css** https://github.com/necolas/normalize.css/
// + **elastic** https://github.com/differui/elastic-grid.css
//
// Styleguide 1.5
@import "plugins/normalize"
@import "plugins/elastic/elastic"

// Skin unrelated variables
@import "globals/variables"

// Skin related variable
@import "skins/" + $name + "/" + $name + "-variables"
@import "skins/" + $name + "/" + $name + "-class"
@import "skins/" + $name + "/" + $name + "-templates"

// Global Basis Style
@import "globals/tentomon"
@import "globals/kss" if $kss is true

// Colors
//
// Default variables: `globals/variables.styl`
//
// Skin variables: `skins/[skin name]/[skin name]-variables.styl`
//
// Styleguide 1.6
@import "globals/color" if $kss is true

