// Foundation
//
// Helpers, Variables, Templates, Mixins foundation of project.
//
// Styleguide 1

// Color Helpers
//
// Styleguide 1.1
@import "utils/colors"

// Blend Mode Helpers
//
// Styleguide 1.2
@import "utils/blends"

// Selectors Helpers
//
// Styleguide 1.3
@import "utils/selector"

// Templates
//
// Templates build on stylus mixin and with `$` as prefix and suffix.
//
// Styleguide 1.4
@import "templates/reset"
@import "templates/center"
@import "templates/flex"

// Plugins
//
// + **normalize.css** https://github.com/necolas/normalize.css/
// + **elastic** https://github.com/differui/elastic-grid.css
//
// Styleguide 1.5
@import "plugins/normalize"
@import "plugins/elastic/elastic"

// Skin unrelated variables
// Default variables: `variables.styl`
@import "variables"

// Skin related variable
// Skin variables: `skins/[skin name]/[skin name]-variables.styl`
@import "skins/" + $ui-name + "/" + $ui-name + "-variables"
@import "skins/" + $ui-name + "/" + $ui-name + "-class"
@import "skins/" + $ui-name + "/" + $ui-name + "-templates"

// Colors
//
// Styleguide 1.6
@import "kss/brand" if $kss is true
@import "kss/grey" if $kss is true
@import "kss/border" if $kss is true
@import "kss/highlight" if $kss is true
@import "kss/shadow" if $kss is true
@import "kss/translucent" if $kss is true

