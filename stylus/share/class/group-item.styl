$GROUP-ITEM
  @extend $ITEM-HORIZONTAL-SOLID

  box-shadow inset 1px 1px 0 $highlight-light

  &:active
    $$top-inner-shadow()

  &:disabled
  &.is-disabled
    .btn
      opacity 0.7

    &
      box-shadow inset 1px 1px 0 $highlight-light

    &.first
      box-shadow inset 0 1px 0 $highlight-light

$GROUP-ITEM-BASIS
  border-color $border-light

$GROUP-ITEM-INFO
  border-color $border-info

$GROUP-ITEM-SAFE
  border-color $border-safe

$GROUP-ITEM-DANGER
  border-color $border-danger

$GROUP-ITEM-WARN
  border-color $border-warn