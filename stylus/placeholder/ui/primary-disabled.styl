// Disabled UI
//
// Primary UI in disabled state.
//
// + `$ui-basis-disabled`
// + `$ui-info-disabled`
// + `$ui-safe-disabled`
// + `$ui-danger-disabled`
// + `$ui-warn-disabled`
//
// Styleguide 3.1.3
$ui-basis-disabled
$ui-info-disabled
$ui-safe-disabled
$ui-danger-disabled
$ui-warn-disabled
  background-image none

$ui-basis-disabled
  color $grey-heavy
  background-color $dis-basis

$ui-info-disabled
  background-color $dis-basis

$ui-safe-disabled
  background-color $dis-basis

$ui-danger-disabled
  background-color $dis-basis

$ui-warn-disabled
  background-color $dis-basis
