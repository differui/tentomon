// Measure Seamless
//
// + `$l-pygmy-seamless`
// + `$l-mini-seamless`
// + `$l-normal-seamless`
// + `$l-huge-seamless`
// + `$l-massive-seamless`
//
// Styleguide 3.2.5
$l-pygmy-seamless
  max-height $ht-pygmy
  padding-top $pd-pygmy + $bd-width
  padding-bottom @padding-top

$l-mini-seamless
  max-height $ht-mini
  padding-top $pd-mini + $bd-width
  padding-bottom @padding-top

$l-normal-seamless
  max-height $ht-normal
  padding-top $pd-normal + $bd-width
  padding-bottom @padding-top

$l-huge-seamless
  max-height $ht-huge
  padding-top $pd-huge + $bd-width
  padding-bottom @padding-top

$l-massive-seamless
  max-height $ht-massive
  padding-top $pd-massive + $bd-width
  padding-bottom @padding-top
