// Button
//
// Size:
//
// + `.btn--xs`
// + `.btn--s`
// + `.btn--m`
// + `.btn--l`
// + `.btn--xl`
//
// Theme:
//
// + `.btn--white`
// + `.btn--black`
// + `.btn--basis`
// + `.btn--safe`
// + `.btn--danger`
// + `.btn--info`
// + `.btn--warn`
// + `.btn--text`
// + `.btn--link`
// + `.btn--outline`
// + `.btn--pill`
// + `.btn--square`
//
// Markup:
// <button class="btn btn--m btn--basis">
//   <span class="btn-text">按钮</span>
// </button>
//
// Styleguide 2.1
.btn
  @extend .nowrap

  reset-gap()
  reset-appearance()

  width        100%
  display      inline-block
  position     relative
  padding      $b-vgap $b-hgap

  outline      0
  border-width $b-bd-width
  border-style $b-bd-style

// -------------------------------------
//   Modifiers
// -------------------------------------

// ----- Size ----- //

.btn--xs
  font-size $b-fs-xs

.btn--s
  font-size $b-fs-s

.btn--m
  font-size $b-fs-m

.btn--l
  font-size $b-fs-l

.btn--xl
  font-size $b-fs-xl

// ----- Theme ----- //

.btn--white
.btn--black
.btn--basis
.btn--info
.btn--safe
.btn--danger
.btn--warn
.btn--link
  border-radius $b-rad-round

.btn--white
  @extend .ui-white

.btn--black
  @extend .ui-black

.btn--basis
  @extend .ui-basis

.btn--info
  @extend .ui-info

.btn--safe
  @extend .ui-safe

.btn--danger
  @extend .ui-danger

.btn--warn
  @extend .ui-warn

.btn--text
.btn--link
.btn--outline
  background-color transparent
  background-image none

.btn--text
.btn--link
  border-color transparent

.btn--link
  color           $c-link-static
  text-decoration underline

.btn--outline
  &.btn--white
    color        $c-white
    border-color @color

  &.btn--black
    color        $c-black
    border-color @color

  &.btn--basis
    color        $c-bd-basis
    border-color @color

  &.btn--info
    color        $c-bd-info
    border-color @color

  &.btn--safe
    color        $c-bd-safe
    border-color @color

  &.btn--danger
    color        $c-bd-danger
    border-color @color

  &.btn--warn
    color        $c-bd-warn
    border-color @color

.btn--pill
  border-radius $b-rad-pill

.btn--square
  border-radius $b-rad-square

// -------------------------------------
//   States
// -------------------------------------

// ----- Active ----- //

.btn:active
  &.btn--basis
  &.btn--info
  &.btn--safe
  &.btn--danger
  &.btn--warn
    vinner-shadow()

  &.btn--text
  &.btn--link
  &.btn--outline
    vinner-shadow(0, 0, transparent)

  &.btn--link
    text-decoration none

  &.btn--text
  &.btn--outline
    opacity .5

// ----- Disabled ----- //

.btn:disabled
  &.btn--basis
  &.btn--info
  &.btn--safe
  &.btn--danger
  &.btn--warn
    background-image none
    vinner-shadow(0, 0, transparent)

  &.btn--basis
    background-color $c-dis-basis

  &.btn--info
    background-color $c-dis-info

  &.btn--safe
    background-color $c-dis-safe

  &.btn--danger
    background-color $c-dis-danger

  &.btn--warn
    background-color $c-dis-warn

  &.btn--link
  &.btn--text
    color $c-grey-dark

  &.btn--link
    text-decoration underline


// -------------------------------------
//   Scaffolding
// -------------------------------------

// ----- Text ----- //

.btn--text
  null

// ----- Icon ----- //

.btn--icon
  null
