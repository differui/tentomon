// Button
//
// Theme:
//
// + `.btn--white`
// + `.btn--black`
// + `.btn--basis`
// + `.btn--info`
// + `.btn--safe`
// + `.btn--danger`
// + `.btn--warn`
//
// Size:
//
// + `.btn--xs`
// + `.btn--s`
// + `.btn--m`
// + `.btn--l`
// + `.btn--xl`
//
// Stylize:
//
// + `.btn--text`
// + `.btn--link`
// + `.btn--outline`
//
// Layout:
//
// + `.btn--auto`
//
// State:
//
// + `:active`
// + `:disabled`
// + `disabled`
//
// Markup:
// <button class="btn btn--basis">
//   <span class="btn-text">按钮</span>
// </button>
//
// Styleguide 2.1
.btn
  @extend .nowrap

  reset-gap()
  reset-appearance()

  width        100%
  display      inline-block
  position     relative
  padding      $b-vgap $b-hgap

  outline      0
  text-align   center
  border-width $b-bd-width
  border-style $b-bd-style

// -------------------------------------
//   Modifiers
// -------------------------------------

// ----- Theme ----- //

.btn--white
.btn--black
.btn--basis
.btn--info
.btn--safe
.btn--danger
.btn--warn
.btn--link
  border-radius $b-rad-round

.btn--white
  @extend .ui-white

.btn--black
  @extend .ui-black

.btn--basis
  @extend .ui-basis

.btn--info
  @extend .ui-info

.btn--safe
  @extend .ui-safe

.btn--danger
  @extend .ui-danger

.btn--warn
  @extend .ui-warn

// ----- Size ----- //

.btn--xs
  font-size $b-fs-s

.btn--xl
  font-size $b-fs-l

.btn--xs
.btn--s
  padding-top $b-vgap-half
  padding-bottom @padding-top

.btn--l
.btn--xl
  padding-top $b-vgap-double
  padding-bottom @padding-top

// ----- Stylize ----- //

.btn--text
.btn--link
.btn--outline
  background-color transparent
  background-image none

.btn--text
.btn--link
  border-color transparent

.btn--link
  color           $c-link-static
  text-decoration underline

.btn--outline
  &.btn--white
    color        $c-white
    border-color @color

  &.btn--black
    color        $c-black
    border-color @color

  &.btn--basis
    color        $c-bd-basis
    border-color @color

  &.btn--info
    color        $c-bd-info
    border-color @color

  &.btn--safe
    color        $c-bd-safe
    border-color @color

  &.btn--danger
    color        $c-bd-danger
    border-color @color

  &.btn--warn
    color        $c-bd-warn
    border-color @color

// ----- Layout ----- //

.btn--auto
  width auto

// -------------------------------------
//   States
// -------------------------------------

// ----- Active ----- //

.btn:active
  &.btn--basis
  &.btn--info
  &.btn--safe
  &.btn--danger
  &.btn--warn
    mix-vinner-shadow()

  &.btn--text
  &.btn--link
  &.btn--outline
    mix-vinner-shadow(0, 0, transparent)

  &.btn--link
    text-decoration none

  &.btn--outline
    &.btn--white
      color        $c-black
      border-color $c-white
      background-color @border-color

    &.btn--black
      color        $c-white
      border-color $c-black
      background-color @border-color

    &.btn--basis
      color        $c-white
      border-color $c-bd-basis

    &.btn--info
      color        $c-white
      border-color $c-bd-info
      background-color @border-color

    &.btn--safe
      color        $c-white
      border-color $c-bd-safe
      background-color @border-color

    &.btn--danger
      color        $c-white
      border-color $c-bd-danger
      background-color @border-color

    &.btn--warn
      color        $c-white
      border-color $c-bd-warn
      background-color @border-color

// ----- Disabled ----- //

.btn:disabled
.btn[data-state~='disabled']
  &.btn--basis
  &.btn--info
  &.btn--safe
  &.btn--danger
  &.btn--warn
    background-image none
    mix-vinner-shadow(0, 0, transparent)

  &.btn--basis
    background-color $c-dis-basis

  &.btn--info
    background-color $c-dis-info

  &.btn--safe
    background-color $c-dis-safe

  &.btn--danger
    background-color $c-dis-danger

  &.btn--warn
    background-color $c-dis-warn

  &.btn--link
  &.btn--text
    color $c-grey-dark

  &.btn--link
    text-decoration underline

// -------------------------------------
//   Scaffolding
// -------------------------------------

// ----- Text ----- //

.btn-text
  null

// ----- Icon ----- //

.btn-icon
  null
