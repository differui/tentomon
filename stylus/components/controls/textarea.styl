// Textarea
//
// **@extent:**
//
// `.textfield`
//
// **Ordinary:**
//
// + `half`    Textarea in **two** rows.
// + `line`    Textarea in **one** row.
// + `immerse` Textarea covered total parent container.
//
// Markup:
// <dl class="form">
//   <dd class="form-content">
//     <textarea class="textarea basis" placeholder="请输入"></textarea>
//   </dd>
// </dl>
//
// Styleguide 7.9
.textarea
  @extend .textfield

  min-width 100%
  max-width 100%

  // Default textarea with 4 rows.
  &
    height $ht-normal   * 4
  
  &.massive
    height $ht-massive * 4
  
  &.huge
    height $ht-huge     * 4
  
  &.mini
    height $ht-mini     * 4
  
  &.pygmy
    height $ht-pygmy    * 4

  // Half textarea with 2 rows.
  &.half
    width 100%

    &
      height $ht-normal   * 2

    &.massive
      height $ht-massive * 2
    
    &.huge
      height $ht-huge     * 2
    
    &.mini
      height $ht-mini     * 2
    
    &.pygmy
      height $ht-pygmy    * 2

  // Edit in immerse mode.
  &.immerse
    line-height $te-line
    height 100%

    padding $gap-vertical $gap-horizontal

  // One row textarea.
  &.line
    &
      height $ht-normal

    &.massive
      height $ht-massive
    
    &.huge
      height $ht-huge
    
    &.mini
      height $ht-mini
    
    &.pygmy
      height $ht-pygmy

  &:not(.line)
  &.pygmy:not(.line)
  &.mini:not(.line)
  &.huge:not(.line)
  &.massive:not(.line)
    max-height none
