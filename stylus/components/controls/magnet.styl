// Magnet
//
// **@extend:**
//
// `.label`
//
// Markup:
// <dl class="form">
//   <dd class="form-content">
//     <input type="text" class="textfield basis">
//     <label class="magnet basis-static amid-315 embed">
//       <span class="magnet-text">用户名</span>
//     </label>
//   </dd>
// </dl>
//
// Styleguide 7.12
.magnet
  @extend $LABEL

  border-radius 0
  border-style none

  &.amid-45
    border-top-right-radius $bd-radius
    border-bottom-left-radius $bd-radius
    border-bottom-style solid
    border-left-style solid

  &.amid-135
    border-bottom-right-radius $bd-radius
    border-top-left-radius $bd-radius
    border-top-style solid
    border-left-style solid

  &.amid-225
    border-bottom-left-radius $bd-radius
    border-top-right-radius $bd-radius
    border-top-style solid
    border-right-style solid

  &.amid-315
    border-top-left-radius $bd-radius
    border-bottom-right-radius $bd-radius
    border-right-style solid
    border-bottom-style solid

// Blank
// ============================================================================
.magnet
  $blank-radio               = 0.1

  // normal
  &.amid-45
  &.amid-315
    padding-bottom round($ht-normal * $blank-radio)

  &.amid-135
  &.amid-225
    padding-top round($ht-normal * $blank-radio)

  &.mini
    &.amid-45
    &.amid-315
      padding-bottom round($ht-mini * $blank-radio)

    &.amid-135
    &.amid-225
      padding-top round($ht-mini * $blank-radio)

  &.pygmy
    &.amid-45
    &.amid-315
      padding-bottom round($ht-pygmy * $blank-radio)

    &.amid-135
    &.amid-225
      padding-top round($ht-pygmy * $blank-radio)

  &.huge
    &.amid-45
    &.amid-315
      padding-bottom round($ht-huge * $blank-radio)

    &.amid-135
    &.amid-225
      padding-top round($ht-huge * $blank-radio)

  &.marssive
    &.amid-45
    &.amid-315
      padding-bottom round($ht-marssive * $blank-radio)

    &.amid-135
    &.amid-225
      padding-top round($ht-marssive * $blank-radio)


.magnet-icon
  display inline-block
  margin-left $te-half
  margin-right $te-half

.magnet-text
  width 100%

.textfield:focus + .magnet
.textarea:focus + .magnet
  display none
