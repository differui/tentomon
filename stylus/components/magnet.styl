// Magnet
//
// Position:
//
// + `.magnet--45`
// + `.magnet--135`
// + `.magnet--225`
// + `.magnet--315`
//
// Theme:
//
// + `.magnet--basis`
// + `.magnet--info`
// + `.magnet--safe`
// + `.magnet--danger`
// + `.magnet--warn`
//
// Context:
//
// + `.has-magnet`
//
// Markup:
// <dl class="form">
//   <dd class="form-bd has-magnet">
//     <input type="text" class="textfield textfield--basis">
//     <label class="magnet magnet--basis magnet--315">
//       <span class="magnet-text">用户名</span>
//     </label>
//   </dd>
// </dl>
//
// Styleguide 2.10
.magnet
  padding $b-vgap $b-hgap

  border-style $b-bd-style
  border-width $b-bd-width

// -------------------------------------
//   Modifiers
// -------------------------------------

// ----- Position ----- //

.magnet--45
  @extend .amid-45

  border-bottom-left-radius $b-rad-round
  border-top-right-radius $b-rad-round

.magnet--135
  @extend .amid-135

  border-top-left-radius $b-rad-round
  border-bottom-right-radius $b-rad-round

.magnet--225
  @extend .amid-225

  border-top-right-radius $b-rad-round
  border-bottom-left-radius $b-rad-round

.magnet--315
  @extend .amid-315

  border-bottom-right-radius $b-rad-round
  border-top-left-radius $b-rad-round

.magnet--45
.magnet--315
  padding-bottom 0

.magnet--135
.magnet--225
  padding-top 0

// ----- Theme ----- //

.magnet--basis
  @extend .ui-basis

.magnet--safe
  @extend .ui-safe

.magnet--danger
  @extend .ui-danger

.magnet--info
  @extend .ui-info

.magnet--warn
  @extend .ui-warn

// -------------------------------------
//   States
// -------------------------------------

// -------------------------------------
//   Scaffolding
// -------------------------------------

.magnet-text
  @extend .nowrap

// -------------------------------------
//   Context
// -------------------------------------

.has-magnet
  position relative
