// Label
//
// Size:
//
// + `.label--xs`
// + `.label--s`
// + `.label--m`
// + `.label--l`
// + `.label--xl`
//
// Markup:
// <label class="label label--m">标签</label>
//
// Styleguide 2.3
.label
  @extend .nowrap

  display        inline-block
  vertical-align middle
  padding-top    $b-vgap + $b-bd-width
  padding-bottom  @padding-top

// -------------------------------------
//   Modifiers
// -------------------------------------

// ----- Size ----- //

.label--xs
  font-size $b-fs-xs

.label--s
  font-size $b-fs-s

.label--m
  font-size $b-fs-m

.label--l
  font-size $b-fs-l

.label--xl
  font-size $b-fs-xl

// -------------------------------------
//   Scaffolding
// -------------------------------------

.label-text
  null

.label-icon
  null
