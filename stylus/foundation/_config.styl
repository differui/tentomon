// -------------------------------------
//   Colors
// -------------------------------------

// ----- Palette ----- //

$grey                        = #f7f7f7
$blue                        = #508cc7
$green                       = #60b044
$red                         = #d1443d
$orange                      = #e9cf14

// ----- Base ----- //

// Degrees

$deg-dark                    = 8%
$deg-darker                  = 13%
$deg-light                   = 8%
$deg-lighter                 = 13%

// Primary Colors

$c-basis                     = $grey
$c-info                      = $blue
$c-safe                      = $green
$c-danger                    = $red
$c-warn                      = $orange

// Grey Colors

$c-white                     = #ffffff
$c-black                     = #323232
$c-grey                      = $grey
$c-grey-light                = lighten($c-grey, 10%)
$c-grey-lighter              = lighten($c-grey, 15%)
$c-grey-dark                 = darken($c-grey,  10%)
$c-grey-darker               = darken($c-grey,  15%)

// Link Colors

$c-link-static               = $c-safe
$c-link-disabled             = $c-grey-light

// Gradient End Colors

$c-end-basis                 = darken($c-basis, $deg-dark)
$c-end-info                  = darken($c-info, $deg-darker   * 1.5)
$c-end-safe                  = darken($c-safe, $deg-darker   * 1.5)
$c-end-danger                = darken($c-danger, $deg-darker * 1.5)
$c-end-warn                  = darken($c-warn, $deg-darker   * 1.5)

// Disabled Colors

$c-dis-basis                 = $c-basis
$c-dis-info                  = lighten($c-info, $deg-lighter   * 2)
$c-dis-safe                  = lighten($c-safe, $deg-lighter   * 2)
$c-dis-danger                = lighten($c-danger, $deg-lighter * 2)
$c-dis-warn                  = lighten($c-warn, $deg-lighter   * 2)

// Border Colors

$c-bd-white                  = $c-white
$c-bd-black                  = $c-black
$c-bd-light                  = $c-grey-light
$c-bd-dark                   = $c-grey-dark
$c-bd-basis                  = $c-bd-dark
$c-bd-info                   = darken($c-info,   $deg-dark)
$c-bd-safe                   = darken($c-safe,   $deg-dark)
$c-bd-danger                 = darken($c-danger, $deg-dark)
$c-bd-warn                   = darken($c-warn,   $deg-dark)

// Background Colors

$c-bg-white                  = $c-white
$c-bg-black                  = $c-black
$c-bg-light                  = lighten($c-grey-light, 80%)
$c-bg-dark                   = lighten($c-grey-dark,  50%)
$c-bg-basis                  = darken($c-basis,       3%)
$c-bg-info                   = translucent($c-info,   10%)
$c-bg-safe                   = translucent($c-safe,   10%)
$c-bg-danger                 = translucent($c-danger, 10%)
$c-bg-warn                   = translucent($c-warn,   10%)

// Translucent Colors

$c-translucent-white         = translucent($c-white, 90%)
$c-translucent-black         = translucent($c-black, 40%)

// Shadow Colors

$c-shadow-light              = translucent($c-black, 20%)
$c-shadow-dark               = translucent($c-black, 50%)

// Highlight Colors

$c-highlight-light           = translucent($c-white, 10%)
$c-highlight-dark            = translucent($c-white, 50%)

// ----- Components ----- //

