// -------------------------------------
//   Base
// -------------------------------------

// ----- Radius & Borders ----- //

$b-rad-square                = 0
$b-rad-round                 = 3px
$b-rad-circle                = 50%
$b-rad-pill                  = 500px
$b-bd-style                  = solid
$b-bd-width                  = 1px
$b-bd-width-bold             = $b-bd-width * 2
$b-bd                        = $b-bd-style $b-bd-width

// ----- Font Size ----- //

$b-ff                        = sans-serif
$b-fs-m                      = 14px
$b-fs-xs                     = round($b-fs-m * 0.714)
$b-fs-s                      = round($b-fs-m * 0.857)
$b-fs-l                      = round($b-fs-m * 1.1)
$b-fs-xl                     = round($b-fs-m * 1.29)
$b-fs-half                   = round($b-fs-m * 0.5)
$b-fs-quarter                = round($b-fs-m * 0.25)

// ----- Line Height ----- //

$b-lh                        = 1.714
$b-lh-xs                     = round($b-fs-xs * $b-lh)
$b-lh-s                      = round($b-fs-s  * $b-lh)
$b-lh-m                      = round($b-fs-m  * $b-lh)
$b-lh-l                      = round($b-fs-l  * $b-lh)
$b-lh-xl                     = round($b-fs-xl * $b-lh)

// ----- Gap ----- //

$b-vgap                      = $b-fs-quarter
$b-hgap                      = $b-fs-s
$b-cgap                      = 20%

$b-hgap-half                 = round($b-hgap / 2)
$b-hgap-double               = round($b-hgap * 2)
$b-hgap-triple               = round($b-hgap * 3)

$b-vgap-half                 = round($b-vgap / 2)
$b-vgap-double               = round($b-vgap * 2)
$b-vgap-triple               = round($b-vgap * 3)

$b-cgap-half                 = round($b-cgap / 2)
$b-cgap-double               = round($b-cgap * 2)
$b-cgap-triple               = round($b-cgap * 3)

// ----- Index ----- //

$b-idx-top                   = 3000
$b-idx-middle                = 2000
$b-idx-bottom                = 1000

// -------------------------------------
//   Components
// -------------------------------------

// ----- Separator ----- //

$rule-offset-xs              = round($b-fs-xs / 2 * -1)
$rule-offset-s               = round($b-fs-s  / 2 * -1)
$rule-offset-m               = round($b-fs-m  / 2 * -1)
$rule-offset-l               = round($b-fs-l  / 2 * -1)
$rule-offset-xl              = round($b-fs-xl / 2 * -1)

// ----- Ribbon ----- //

$ribbon-size-xs              = be-even($b-fs-xs * 2.3)
$ribbon-size-s               = be-even($b-fs-s  * 2.3)
$ribbon-size-m               = be-even($b-fs-m  * 2.3)
$ribbon-size-l               = be-even($b-fs-l  * 2.3)
$ribbon-size-xl              = be-even($b-fs-xl * 2.3)

// ----- Bubble ----- //

$bubble-size-xs              = be-even($b-fs-xs * 2)
$bubble-size-s               = be-even($b-fs-s  * 2)
$bubble-size-m               = be-even($b-fs-m  * 2)
$bubble-size-l               = be-even($b-fs-l  * 2)
$bubble-size-xl              = be-even($b-fs-xl * 2)

// ----- Slider ----- //

$slider-gap-xs          = round($b-vgap + ($b-lh-m - $b-fs-xs / 2) / 2)
$slider-gap-s           = round($b-vgap + ($b-lh-m - $b-fs-s  / 2) / 2)
$slider-gap-m           = round($b-vgap + ($b-lh-m - $b-fs-m  / 2) / 2)
$slider-gap-l           = round($b-vgap + ($b-lh-m - $b-fs-l  / 2) / 2)
$slider-gap-xl          = round($b-vgap + ($b-lh-m - $b-fs-xl / 2) / 2)

// ----- Caret ----- //

$caret-size-xs               = be-even($b-fs-xs * .6)
$caret-size-s                = be-even($b-fs-s  * .6)
$caret-size-m                = be-even($b-fs-m  * .6)
$caret-size-l                = be-even($b-fs-l  * .6)
$caret-size-xl               = be-even($b-fs-xl * .6)

$caret-offset-xs             = be-even(($b-fs-xs - $b-fs-xs * .6) / 2)
$caret-offset-s              = be-even(($b-fs-s  - $b-fs-s  * .6) / 2)
$caret-offset-m              = be-even(($b-fs-m  - $b-fs-m  * .6) / 2)
$caret-offset-l              = be-even(($b-fs-l  - $b-fs-l  * .6) / 2)
$caret-offset-xl             = be-even(($b-fs-xl - $b-fs-xl * .6) / 2)

// ----- Tooltip ----- //

$tooltip-caret-width         = be-even($b-fs-s  * .6)
$tooltip-bd-offset           = be-even($b-fs-s  * .6 * -2)

// ----- Dot ----- //

$dot-size-xs                 = be-even($b-fs-xs * .8)
$dot-size-s                  = be-even($b-fs-s  * .8)
$dot-size-m                  = be-even($b-fs-m  * .8)
$dot-size-l                  = be-even($b-fs-l  * .8)
$dot-size-xl                 = be-even($b-fs-xl * .8)

// ----- Section ----- //

$section-gap                 = 5px

