// Styleguide 1.1

// translucent
//
// Add alpha channel into rgb color.
// The origin alpha channel will be override by new value.
//
// `translucent($color, $alpha)`
//
// + `$color` `rgba`
// + `$alpha` `unit` The new value for alpha channel.
//
// Styleguide 1.1.1
translucent($color, $alpha) {
  ensure($color, "rgba")

  $red   = red($color)
  $green = green($color)
  $blue  = blue($color)

  return rgba($red, $green, $blue, unit($alpha, "%"))
}

// be-evne
//
// If `$unit` is a odd integer than minus one.
//
// `be-even($unit)`
//
// + `$unit` `unit`
//
// Styleguide 1.1.2
be-even($unit)
  $rounded = round($unit)

  if even($rounded) isnt true
    return $rounded - 1
  else
    return $rounded

// be-odd
//
// If `$unit` is a even integer than plus one.
//
// `be-odd($unit)`
//
// + `$unit` `unit`
//
// Styleguide 1.1.3
be-odd($unit)
  $rounded = round($unit)

  if odd($rounded) isnt true
    return $rounded + 1
  else
    return $rounded

// Mixins
//
// Styleguide 1.2

// mix-inner-glow
//
// `mix-inner-glow($color, $length)`
//
// + `$color` `rgba`
// + `$length` `unit`(4) Glow spread length.
//
// Styleguide 1.2.1
mix-inner-glow($color, $length = 4)
  ensure($color, 'rgba')

  box-shadow 0 0 unit($length * -1, 'px') $color

// mix-outer-glow
//
// `mix-outer-glow($color, $length)`
//
// + `$color` `rgba`
// + `$length` `unit`(4) Glow spread length.
//
// Styleguide 1.2.2
mix-outer-glow($color, $length = 4)
  ensure($color, 'rgba')

  box-shadow 0 0 unit($length, 'px') $color

// mix-text-highlight
//
// `mix-text-highlight($color)`
//
// + `$color` `rgba`(`$c-highlight-light`) Highlight color.
//
// Styleguide 1.2.3
mix-text-highlight($color = $c-highlight-light)
  mix-text-shadow 0 1px 0 $color

// mix-text-shadow
//
// Emboss text effect by `mix-text-shadow`.
//
// `mix-text-shadow($color)`
//
// + `$color` `rgba`(`$c-shadow-light`) Shadow color.
//
// Styleguide 1.2.4
mix-text-shadow($color = $c-shadow-light)
  mix-text-shadow 0 -1px 0 $color

// mix-vinner-shadow
//
// Vertical component inner shadow.
//
// `mix-vinner-shadow($deep, $length, $color)`
//
// + `$deep` `unit`(2) Shadow deep.
// + `$length` `unit`(4) Length of shadow spread.
// + `$color` `rgba`(`$c-shadow-light`) Shadow color.
//
// Styleguide 1.2.5
mix-vinner-shadow($deep = 2, $length = 4, $color = $c-shadow-light)
  box-shadow inset 0 unit($deep, 'px') unit($length, 'px') $color

// mix-vouter-shadow
//
// Vertical component outer shadow.
//
// `mix-vinner-shadow($deep, $length, $color)`
//
// + `$deep` `unit`(2) Shadow deep.
// + `$length` `unit`(4) Length of shadow spread.
// + `$color` `rgba`(`$c-shadow-light`) Shadow color.
//
// Styleguide 1.2.6
mix-vouter-shadow($deep = 2, $length = 4, $color = $c-shadow-light)
  box-shadow 0 unit($deep, 'px') unit($length, 'px') $color

// mix-hinner-shadow
//
// Horizontal component inner shadow.
//
// `mix-vinner-shadow($deep, $length, $color)`
//
// + `$deep` `unit`(2) Shadow deep.
// + `$length` `unit`(4) Length of shadow spread.
// + `$color` `rgba`(`$c-shadow-light`) Shadow color.
//
// Styleguide 1.2.7
mix-hinner-shadow($deep = 2, $length = 4, $color = $c-shadow-light)
  box-shadow inset unit($deep, 'px') 0 unit($length, 'px') $color

// mix-houter-shadow
//
// Horizontal component outer shadow.
//
// `mix-vinner-shadow($deep, $length, $color)`
//
// + `$deep` `unit`(2) Shadow deep.
// + `$length` `unit`(4) Length of shadow spread.
// + `$color` `rgba`(`$c-shadow-light`) Shadow color.
//
// Styleguide 1.2.8
mix-houter-shadow($deep = 2, $length = 4, $color = $c-shadow-light)
  box-shadow unit($deep, 'px') 0 unit($length, 'px') $color

// mix-vgradient
//
// Vertical two color stop gradient.
// If one of color stop not given gradient will be override into empty.
//
// `mix-vgradient($start, $end)`
//
// + `$start` `rgba` Start color stop.
// + `$end` `rgba` End color stop.
//
// Styleguide 1.2.9
mix-vgradient($start, $end)
  if $start and $end
    background-image linear-gradient($start, $end)
  else
    background-image none

// mix-font-face
//
// `mix-font-face($name, $path, $weight, $style)`
//
// + `$name` `str` Font name
// + `$path` `str` Font asset path
// + `$weight` Font weight
// + `$style`  Font style
//
// Styleguide 1.2.10
mix-font-face($name, $path, $weight = normal, $style = normal)
  @font-face
    font-family $name
    src url($path + '.eot')
    src url($path + '.eot?#iconic-sm') format('embedded-opentype'), url($path + '.woff') format('woff'), url($path + '.ttf') format('truetype'), url($path + '.otf') format('opentype'), url($path + '.svg#iconic-sm') format('svg')
    font-weight $weight
    font-style $style

