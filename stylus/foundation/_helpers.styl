// Long string would not wrap.
//
// Styleguide 1.4.2
.nowrap
  white-space nowrap

// wrap
//
// Long string would wrap.
//
// Styleguide 1.4.3
.wrap
  white-space normal

// clip & ellipsis
//
// Clip or draw ellipsis for over string.
//
// Styleguide 1.4.4
.clip
.ellipsis
  @extend .nowrap

