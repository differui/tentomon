// *************************************
//
//   Tools
//   -> Global utilities
//
// *************************************

// Display
//
// + `.db`  block
// + `.di`  inline
// + `.dib` inline block
// + `.dn`  none
//
// Styleguide 5.1

.db
  display block

.di
  display inline

.dib
  display inline-block

.dn
  display none

// Margin
//
// `{* | * ∈ a, t, r, b, l, h, v}`
//
// + `.m*f` flatten
// + `.m*`  normal
// + `.m*h` half
// + `.m*d` double
// + `.m*t` triple
//
// Styleguide 5.2

// ----- All ----- //

.maf
  margin 0

.ma
  margin $b-vgap $b-hgap

.mah
  margin $b-vgap-half $b-hgap-half

.mad
  margin $b-vgap-double $b-hgap-double

.mat
  margin $b-vgap-triple $b-hgap-triple


// ----- Top ----- //

.mtf
  margin-top 0

.mt
  margin-top $b-vgap

.mth
  margin-top $b-vgap-half

.mtd
  margin-top $b-vgap-double

.mtt
  margin-top $b-vgap-triple

// ----- Right ----- //

.mrf
  margin-right 0

.mr
  margin-right $b-hgap

.mrh
  margin-right $b-hgap-half

.mrd
  margin-right $b-hgap-double

.mrt
  margin-right $b-hgap-triple

// ----- Bottom ----- //

.mbf
  margin-bottom 0

.mb
  margin-bottom $b-vgap

.mbh
  margin-bottom $b-vgap-half

.mbd
  margin-bottom $b-vgap-double

.mbt
  margin-bottom $b-vgap-triple

// ----- Left ----- //

.mlf
  margin-left 0

.ml
  margin-left $b-hgap

.mlh
  margin-left $b-hgap-half

.mld
  margin-left $b-hgap-double

.mlt
  margin-left $b-hgap-triple

// ----- Horizontal ----- //

.mhf
  margin-left 0
  margin-right @margin-left

.mh
  margin-left $b-hgap
  margin-right @margin-left

.mhh
  margin-left $b-hgap-half
  margin-right @margin-left

.mhd
  margin-left $b-hgap-double
  margin-right @margin-left

.mht
  margin-left $b-hgap-triple
  margin-right @margin-left

// ----- Vertical ----- //

.mvf
  margin-top 0
  margin-bottom @margin-left

.mv
  margin-top $b-vgap
  margin-bottom @margin-top

.mvh
  margin-top $b-vgap-half
  margin-bottom @margin-top

.mvd
  margin-top $b-vgap-double
  margin-bottom @margin-top

.mvt
  margin-top $b-vgap-triple
  margin-bottom @margin-top

