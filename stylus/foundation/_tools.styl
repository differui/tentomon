// Typeset
//
// Alignment:
//
// + `.tac` center
// + `.tal` left
// + `.tar` right
// + `.taj` justify
//
// Color:
//
// + `.tcgl` grey light
// + `.tcgd` grey dark
// + `.tcb`  basis
// + `.tci`  info
// + `.tcs`  safe
// + `.tcd`  danger
// + `.tcw`  warn
//
// Size:
//
// + `.tsxs` x-small
// + `.tss`  small
// + `.tsm`  medium
// + `.tsl`  large
// + `.tsxl` x-large
//
// Style:
//
// + `.tsn` normal
// + `.tsi` italic
//
// Transform:
//
// + `.ttu` uppercase
// + `.ttl` lowercase
// + `.ttc` capitalize
//
// Weight:
//
// + `.twn` weight normal
// + `.twb` weight bold
//
// Styleguide 5.7

// ----- Alignment ----- //

.tac
  text-align center

.tal
  text-align left

.tar
  text-align right

.taj
  text-align justify

// ----- Color ----- //

.tcgl
  color $c-grey-light

.tcgd
  color $c-grey-dark

.tcb
  color $c-basis

.tci
  color $c-info

.tcs
  color $c-safe

.tcd
  color $c-danger

.tcw
  color $c-warn

// ----- Size ----- //

.tsxs
  font-size $b-fs-xs

.tss
  font-size $b-fs-s

.tsm
  font-size $b-fs-m

.tsl
  font-size $b-fs-l

.tsxl
  font-size $b-fs-xls

// ----- Style ----- //

.tsi
  font-style italic

// ----- Transform ----- //

.ttu
  text-transform uppercase

.ttl
  text-transform lowercase

.ttc
  text-transform capitalize

// ----- Weight ----- //

.twn
  font-weight normal

.twb
  font-weight bold

// Background
//
// + `bgp` remove bg image & shadow
// + `bgc` remove same stuff & addition bg color
//
// Styleguide 5.8
.bgp
.bgc
  background-image none
  box-shadow 0 0 0 transparent

.bgc
  background-color transparent

// BFC
//
// Create bfc(black formatting context).
//
// + `.bfh` overflow hidden
// + `.bfib` display inline block
//
// Styleguide 5.9
.bfc-hidden
  overflow hidden

.bfc-display
  display inline-block

// Index
//
// + `.top`
// + `.middle` 
// + `.bottom`
//
// Styleguide 5.10
.top
  z-index $b-idx-top

.middle
  z-index $b-idx-middle

.bottom
  z-index $b-ix-bottom

// Rotating
//
// `{* | * ∈ l, r}`
//
// `{x | x ∈ 45, 90, 135, 180}`
//
// + `.r*x`
//
// Styleguide 5.11
.rl45
  transform rotate(45deg)

.rl90
  transform rotate(90deg)

.rl135
  transform rotate(130deg)

.rl180
  transform rotate(180deg)

.rr45
  transform rotate(-45deg)

.rr90
  transform rotate(-90deg)

.rr130
  transform rotate(-130deg)

.rr180
  transform rotate(-180deg)