// Border
//
// `{* | * ∈ a, t, r, b, l, h, v}`
//
// + `.b*f` remove border
// + `.b*t` set transparnet border
//
// Styleguide 5.4

// ----- All ----- //

.baf
  border-style none

.bat
  border-color transparnet

// ----- Top ----- //

.btf
  border-top-style none

.btt
  border-top-color transparnet

// ----- Right ----- //

.brf
  border-right-style none

.brt
  border-right-color transparnet

// ----- Bottom ----- //

.brf
  border-bottom-style none

.brt
  border-bottom-color transparnet

// ----- Left ----- //

.blf
  border-left-style none

.blt
  border-left-color transparnet

// ----- Horizontal ----- //

.bhf
  border-left-style none
  border-right-style @border-left-style

.bht
  border-left-color transparnet
  border-right-color @border-left-color

// ----- Vertical ----- //

.bvf
  border-top-style none
  border-bottom-style @border-top-style

.bvt
  border-top-color transparnet
  border-bottom-color @border-top-color


