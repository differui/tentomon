.pt
  padding-top $b-vgap

.pth
  padding-top $b-vgap-half

.ptd
  padding-top $b-vgap-double

.ptt
  padding-top $b-vgap-triple

// ----- Right ----- //

.prf
  padding-right 0

.pr
  padding-right $b-hgap

.prh
  padding-right $b-hgap-half

.prd
  padding-right $b-hgap-double

.prt
  padding-right $b-hgap-triple

.prc
  padding-right $b-cgap

.prcd
  padding-right $b-cgap * 2

.prct
  padding-right $b-cgap * 3

// ----- Bottom ----- //

.pbf
  padding-bottom 0

.pb
  padding-bottom $b-vgap

.pbh
  padding-bottom $b-vgap-half

.pbd
  padding-bottom $b-vgap-double

.pbt
  padding-bottom $b-vgap-triple

// ----- Left ----- //

.plf
  padding-left 0

.pl
  padding-left $b-hgap

.plh
  padding-left $b-hgap-half

.pld
  padding-left $b-hgap-double

.plt
  padding-left $b-hgap-triple

.plc
  padding-left $b-cgap

.plcd
  padding-left $b-cgap * 2

.plct
  padding-left $b-cgap * 3

// ----- Horizontal ----- //

.phf
  padding-left 0
  padding-right @padding-left

.ph
  padding-left $b-hgap
  padding-right @padding-left

.phh
  padding-left $b-hgap-half
  padding-right @padding-left

.phd
  padding-left $b-hgap-double
  padding-right @padding-left

.pht
  padding-left $b-hgap-triple
  padding-right @padding-left

.phc
  padding-left $b-cgap
  padding-right @padding-left

.phcd
  padding-left $b-cgap * 2
  padding-right @padding-left

.phct
