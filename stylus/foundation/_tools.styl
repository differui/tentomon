  padding-top $b-vgap-triple
  padding-bottom @padding-top

// Remove Border
//
// `{* | * ∈ a, t, r, b, l, h, v}`
//
// + `.b*f` flatten
// + `.b*t` transparent
//
// Markup:
// <button class="btn btn--basis baf">按钮</button>
//
// Styleguide 5.4

// ----- All ----- //

.baf
  border-style none

.bat
  border-color transparent

// ----- Top ----- //

.btf
  border-top-style none

.btt
  border-top-color transparent

// ----- Right ----- //

.brf
  border-right-style none

.brt
  border-right-color transparent

// ----- Bottom ----- //

.bbf
  border-bottom-style none

.bbt
  border-bottom-color transparent

// ----- Left ----- //

.blf
  border-left-style none

.blt
  border-left-color transparent

// ----- Horizontal ----- //

.bhf
  border-left-style none
  border-right-style @border-left-style

.bht
  border-left-color transparent
  border-right-color @border-left-color

// ----- Vertical ----- //

.bvf
  border-top-style none
  border-bottom-style @border-top-style

.bvt
  border-top-color transparent
  border-bottom-color @border-top-color

// Floating
//
// + `.fl` float left
// + `.fr` float right
//
// Styleguide 5.5

.fl
  float left

.fr
  float right

// Positioning
//
// + `.poa` absolute
// + `.pof` fixed
// + `.por` relative
// + `.pos` static
//
// Styleguide 5.6

.poa
  position absolute

.pof
  position fixed

.por
  position relative

.pos
  position static

// Rounding
//
// `{* | * ∈ a, t, r, b, l}`
//
// + `r*c` circle
// + `r*r` round
// + `r*p` pill
// + `r*s` square
//
// Markup:
// <button class="btn btn--basis rrs">按钮</button>
//
// Styleguide 5.7

// ----- All ----- //

.rac
  border-radius $b-rad-circle

.rar
  border-radius $b-rad-round

.rap
  border-radius $b-rad-pill

.ras
  border-radius $b-rad-square

// ----- Top ----- //

.rtc
  border-top-left-radius $b-rad-circle
  border-top-right-radius @border-top-left-radius

.rtr
  border-top-left-radius $b-rad-round
  border-top-right-radius @border-top-left-radius

.rtp
  border-top-left-radius $b-rad-pill
  border-top-right-radius @border-top-left-radius

.rts
  border-top-left-radius $b-rad-square
  border-top-right-radius @border-top-left-radius

// ----- Right ----- //

.rrc
  border-top-right-radius $b-rad-circle
  border-bottom-right-radius @border-top-right-radius

.rrr
  border-top-right-radius $b-rad-round
  border-bottom-right-radius @border-top-right-radius

.rrp
  border-top-right-radius $b-rad-pill
  border-bottom-right-radius @border-top-right-radius

.rrs
  border-top-right-radius $b-rad-square
  border-bottom-right-radius @border-top-right-radius

// ----- Bottom ----- //

.rbc
  border-bottom-left-radius $b-rad-circle
  border-bottom-right-radius @border-bottom-left-radius

.rbr
  border-bottom-left-radius $b-rad-round
  border-bottom-right-radius @border-bottom-left-radius

.rbp
  border-bottom-left-radius $b-rad-pill
  border-bottom-right-radius @border-bottom-left-radius

.rbs
  border-bottom-left-radius $b-rad-square
  border-bottom-right-radius @border-bottom-left-radius

// ----- Left ----- //

.rlc
  border-top-left-radius $b-rad-circle
  border-bottom-left-radius @border-top-left-radius

.rlr
  border-top-left-radius $b-rad-round
  border-bottom-left-radius @border-top-left-radius

.rlp
  border-top-left-radius $b-rad-pill
  border-bottom-left-radius @border-top-left-radius

.rls
  border-top-left-radius $b-rad-square
  border-bottom-left-radius @border-top-left-radius


// Width
//
// + `.wh` half
// + `.wf` full
//
// Markup:
// <button class="btn btn--basis wh">按钮</button>
//
// Styleguide 5.8

.wh
  width 50%

.wf
  width 100%

// Height
//
// + `.hh` half
// + `.hf` full
//
// Styleguide 5.9

.hh
  height 50%

.hf
  height 100%

// Typeset
//
// Alignment:
//
// + `.tac` center
// + `.tal` left
// + `.tar` right
// + `.taj` justify
//
// Color:
//
// + `.tcgl` grey light
// + `.tcgd` grey dark
// + `.tcb`  basis
// + `.tci`  info
// + `.tcs`  safe
// + `.tcd`  danger
// + `.tcw`  warn
//
// Size:
//
// + `.tsxs` x-small
// + `.tss`  small
// + `.tsm`  medium
// + `.tsl`  large
// + `.tsxl` x-large
//
// Style:
//
// + `.tsn` normal
// + `.tsi` italic
//
// Transform:
//
// + `.ttu` uppercase
// + `.ttl` lowercase
// + `.ttc` capitalize
//
// Weight:
//
// + `.twn` weight normal
// + `.twb` weight bold
//
// Styleguide 5.10

// ----- Alignment ----- //

.tac
  text-align center

.tal
  text-align left

.tar
  text-align right

.taj
  text-align justify

// ----- Color ----- //

.tcgl
  color $c-grey-light

.tcgd
  color $c-grey-dark

.tcb
  color $c-basis

.tci
  color $c-info

.tcs
  color $c-safe

.tcd
  color $c-danger

.tcw
  color $c-warn

// ----- Size ----- //

.fsxs
  font-size $b-fs-xs

.fss
  font-size $b-fs-s

.fsm
  font-size $b-fs-m

.fsl
  font-size $b-fs-l

.fsxl
  font-size $b-fs-xl

// ----- Style ----- //

.tsi
  font-style italic

// ----- Transform ----- //

.ttu
  text-transform uppercase

.ttl
  text-transform lowercase

.ttc
  text-transform capitalize

// ----- Weight ----- //

.twn
  font-weight normal

.twb
  font-weight bold

// Background
//
// + `bgp` remove bg image & shadow
// + `bgc` remove same stuff & addition bg color
//
// Markup:
// <button class="btn btn--basis bgc">按钮</button>
//
// Styleguide 5.11
.bgp
.bgc
  background-image none
  box-shadow 0 0 0 transparent

.bgc
  background-color transparent

// BFC
//
// Create bfc(black formatting context).
//
// + `.bfh` overflow hidden
// + `.bfib` display inline block
//
// Styleguide 5.12
.bfo
  overflow hidden

.bfi
  display inline-block

// Index
//
// + `.top`
// + `.middle`
// + `.bottom`
//
// Styleguide 5.13
.zit
  z-index $b-idx-top

.zim
  z-index $b-idx-middle

.zib
  z-index $b-idx-bottom
  
// Pointer Events
//
// + 'pen' pointer events none
// + 'pea' pointer events auto
//
// Styleguide 5.14
.pen
  pointer-events none

.pea
  pointer-events auto

// Rotating
//
// `{* | * ∈ l, r}`
//
// `{x | x ∈ 45, 90, 135, 180}`
//
// + `.r*x`
//
// Markup:
// <button class="btn btn--basis rl180">按钮</button>
//
// Styleguide 5.15
.rl45
  transform rotate(45deg)

.rl90
  transform rotate(90deg)

.rl135
  transform rotate(130deg)

.rl180
  transform rotate(180deg)

.rr45
  transform rotate(-45deg)

.rr90
  transform rotate(-90deg)

.rr130
  transform rotate(-130deg)

.rr180
  transform rotate(-180deg)
