// Greys
//
// Markup:
// <p class="sg-color kss-white">$te-white</p>
// <p class="sg-color kss-black">$te-black</p>
// <p class="sg-color kss-grey">$grey</p>
// <p class="sg-color kss-grey-light">$grey-light</p>
// <p class="sg-color kss-grey-heavy">$grey-heavy</p>
//
// Styleguide 1.6.2
.kss-white
  background-color $te-white

.kss-black
  color $te-white
  background-color $te-black

.kss-grey
  background-color $grey

.kss-grey-light
  background-color $grey-light

.kss-grey-heavy
  background-color $grey-heavy
