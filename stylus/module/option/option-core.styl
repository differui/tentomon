// Core
//
// **Size:**
//
// + `.pygmy`
// + `.mini`
// + `.normal`
// + `.huge`
// + `.massive`
//
// Styleguide 5.3.1
.option
  position relative

  &.pygmy
    @extend $l-pygmy-seamless

  &.mini
    @extend $l-mini-seamless

  &.normal
    @extend $l-normal-seamless

  &.huge
    @extend $l-huge-seamless

  &.massive
    @extend $l-massive-seamless

.option-tag
  opacity 0
  position absolute

.option-mock
  @extend $l-center-left

  width $te-larger
  height @width

.option-text
  margin-left $te-larger + $gap-h

.option-indicator
  @extend $l-center

  opacity 0
  display block
