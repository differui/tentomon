// UI
//
// + `.ui-basis`
// + `.ui-info`
// + `.ui-safe`
// + `.ui-danger`
// + `.ui-warn`
// + `.ui-solid`
// + `.ui-dashed`
// + `.ui-dotted`
// + `.ui-notch`
//
// Styleguide 5.17.2
.ui-basis > .sp-inner
  color $bd-basis

  &:before
  &:after
    border-color $bd-basis

.ui-info > .sp-inner
  color $bd-info

  &:before
  &:after
    border-color $bd-info

.ui-safe > .sp-inner
  color $bd-safe

  &:before
  &:after
    border-color $bd-safe

.ui-danger > .sp-inner
  color $bd-danger

  &:before
  &:after
    border-color $bd-danger

.ui-warn > .sp-inner
  color $bd-warn

  &:before
  &:after
    border-color $bd-warn

.sp-inner
  &:before
  &:after
    border-width $bd-width

.sp-text
  text-align center
  line-height $tf-height

.sp-v
  &.ui-solid > .sp-inner
    &:before
    &:after
      border-left-style solid

  &.ui-dashed > .sp-inner
    &:before
    &:after
      border-left-style dashed
    
  &.ui-dotted > .sp-inner
    &:before
    &:after
      border-left-style dotted

  &.ui-notch > .sp-inner
    &:before
    &:after
      border-left-style solid
      border-right-style solid
      border-right-color $highlight-light

.sp-h
  &.ui-solid > .sp-inner
    &:before
    &:after
      border-top-style solid

  &.ui-dashed > .sp-inner
    &:before
    &:after
      border-top-style dashed
    
  &.ui-dotted > .sp-inner
    &:before
    &:after
      border-top-style dotted

  &.ui-notch > .sp-inner
    &:before
    &:after
      border-top-style solid
      border-bottom-style solid
      border-bottom-color $highlight-light