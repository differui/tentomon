// UI
//
// **Color:**
//
// + `.ui-basis`
// + `.ui-info`
// + `.ui-safe`
// + `.ui-danger`
// + `.ui-warn`
//
//
// **Shape:**
//
// + `.ui-round`
// + `.ui-pill`
// + `.ui-circle`
//
// Styleguide 5.11.2
.bubble
  line-height $tf-height

  &.ui-basis
    @extend $ui-basis-static

  &.ui-info
    @extend $ui-info-static

  &.ui-safe
    @extend $ui-safe-static

  &.ui-danger
    @extend $ui-danger-static

  &.ui-warn
    @extend $ui-warn-static

  &.ui-round
    border-radius $bd-radius

  &.ui-circle
    border-radius 50%

  &.ui-pill
    border-radius 500px

.bubble-text
  text-align center
