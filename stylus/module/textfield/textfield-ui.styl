// UI
//
// + `.ui-area`
// + `.ui-immerse`
// + `.ui-basis`
// + `.ui-info`
// + `.ui-safe`
// + `.ui-danger`
// + `.ui-warn`
//
// Styleguide 5.2.2
.textfield
  outline 0
  font-size $te
  border-radius $bd-radius
  border solid $bd-width

  &.ui-basis
    @extend $ui-basis-static

  &.ui-info
    @extend $ui-info-static

  &.ui-safe
    @extend $ui-safe-static

  &.ui-danger
    @extend $ui-danger-static

  &.ui-warn
    @extend $ui-warn-static

  &.ui-basis
  &.ui-info
  &.ui-safe
  &.ui-danger
  &.ui-warn
    color $black
    line-height $tf-height
    background-color $white
    background-image none
    $$top-inner-shadow()

  &.ui-area
    line-height $te-line

  &.ui-immerse
    border-radius 0
    border-style none
    line-height $te-line
