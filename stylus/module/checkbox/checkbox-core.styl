// Core
//
// + `.pygmy`
// + `.mini`
// + `.normal`
// + `.huge`
// + `.massive`
//
// Styleguide 5.3.1
.checkbox
  position relative

  &.pygmy
    @extend $l-pygmy-seamless

  &.mini
    @extend $l-mini-seamless

  &.normal
    @extend $l-normal-seamless

  &.huge
    @extend $l-huge-seamless

  &.massive
    @extend $l-massive-seamless

.checkbox-tag
  opacity 0

.checkbox-mock
  @extend $l-center-left

  width $te-larger
  height @width

.checkbox-text
  margin-left $gap-horizontal

.checkbox-indicator
  @extend $l-center

  width $te-smaller + 1
  height $te-half - 1
  top -2px
  opacity 0
  display block
  transform rotate(-45deg)
