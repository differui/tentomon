// State
//
// **State:**
//
// + `half`
// + `done`
// + `waiting`
//
// Markup:
// <div class="progress normal" data-state="half waiting">
//   <span class="progress-indicator">
//     <span class="progress-text-reverse">提示 - 过长的内容会被省略，就像现在这个样子。</span>
//   </span>
//   <span class="progress-text">提示 - 过长的内容会被省略，就像现在这个样子。</span>
// </div>
//
// Styleguide 5.8.3
.progress
  &[data-state~='half']
    .progress-indicator
      width 50%

  &[data-state~='done']
    .progress-indicator
      width 100%

  &[data-state~='waiting']
    @extend $pat-stripes-diagonal

    background-color $bd-heavy
