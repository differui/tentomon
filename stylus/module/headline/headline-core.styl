// Core
//
// Size
//
// + `.pygmy`
// + `.mini`
// + `.normal`
// + `.huge`
// + `.massive`
//
// Styleguide 5.19.1
.headline
  $reset-gap$()

  width 100%
  display block

  &.pygmy
    @extend $l-pygmy-seam

  &.mini
    @extend $l-mini-seam

  &.normal
    @extend $l-normal-seam

  &.huge
    @extend $l-huge-seam

  &.massive
    @extend $l-massive-seam