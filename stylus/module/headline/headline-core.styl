// Core
//
// **Size:**
//
// + `.pygmy`
// + `.mini`
// + `.normal`
// + `.huge`
// + `.massive`
//
//
// **Typeset:**
//
// + `.wrap`
// + `.break`
//
// Styleguide 5.19.1
.headline
  @extend $t-over-ellipsis

  $reset-gap$()

  width 100%
  display block

  &.pygmy
    @extend $l-pygmy-seam

  &.mini
    @extend $l-mini-seam

  &.normal
    @extend $l-normal-seam

  &.huge
    @extend $l-huge-seam

  &.massive
    @extend $l-massive-seam

  &.wrap
    max-height none

  &.break
    @extend $t-break
