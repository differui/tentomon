// Core
//
// **Size:**
//
// + `.pygmy`
// + `.mini`
// + `.normal`
// + `.huge`
// + `.massive`
//
//
// **Position:**
//
// + `.amid-45`
// + `.amid-135`
// + `.amid-225`
// + `.amid-315`
//
// Styleguide 5.10.1
.magnet
  null

.magnet-text
  @extend $t-nowrap

.magnet
  &.pygmy
  &.mini
  &.normal
  &.huge
  &.massive
    padding-left $hgap
    padding-right @padding-left

  &.pygmy
    @extend $l-pygmy-seam

  &.mini
    @extend $l-mini-seam

  &.normal
    @extend $l-normal-seam

  &.huge
    @extend $l-huge-seam

  &.massive
    @extend $l-massive-seam

  &.amid-45
    @extend $l-center-top-right

  &.amid-135
    @extend $l-center-bottom-right

  &.amid-225
    @extend $l-center-bottom-left

  &.amid-315
    @extend $l-center-top-left

  &.amid-45
  &.amid-315
    &.pygmy
    &.mini
      padding-bottom 0

    &.normal
    &.huge
      padding-bottom $vgap

    &.massive
      padding-bottom $vgap * 2

  &.amid-135
  &.amid-225
    &.pygmy
    &.mini
      padding-top 0

    &.normal
    &.huge
      padding-top $vgap

    &.massive
      padding-top $vgap * 2
