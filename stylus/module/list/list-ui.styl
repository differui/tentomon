// UI
//
// **Color:**
//
// + `.ui-basis`
// + `.ui-info`
// + `.ui-safe`
// + `.ui-danger`
// + `.ui-warn`
//
//
// **List Style Type:**
//
// + `.ui-disc`
// + `.ui-circle`
// + `.ui-decimal`
//
//
// **Item Separator Style:**
//
// + `.ui-solid`
// + `.ui-dashed`
// + `.ui-dotted`
// + `.ui-notch`
// + `.ui-sunken`
//
// Styleguide 5.14.2
.list
  > li
    border-width $bd-width

  &.ui-basis
    > li
      border-color $bd-basis

  &.ui-info
    > li
      border-color $bd-info

  &.ui-safe
    > li
      border-color $bd-safe

  &.ui-danger
    > li
      border-color $bd-danger

  &.ui-warn
    > li
      border-color $bd-warn

  &.ui-disc
  &.ui-circle
  &.ui-decimal
    list-style-position inside

  &.ui-disc
    list-style-type disc

  &.ui-circle
    list-style-type circle

  &.ui-decimal
    list-style-type decimal

  &.ui-solid
  &.ui-notch
  &.ui-dashed
  &.ui-dotted
    > li.last
      border-bottom-style none

  &.ui-solid
  &.ui-notch
    > li
      border-bottom-style solid

  &.ui-dashed
    > li
      border-bottom-style dashed

  &.ui-dotted
    > li
      border-bottom-style dotted

  &.ui-notch
    > li
      top-inner-shadow(1, 0, $highlight-light)

  &.ui-sunken
    &.ui-basis > li:after
      background-image radial-gradient(farthest-side at left center, $bd-basis, transparent)

    &.ui-info > li:after
      background-image radial-gradient(farthest-side at left center, $bd-info, transparent)

    &.ui-safe > li:after
      background-image radial-gradient(farthest-side at left center, $bd-safe, transparent)

    &.ui-danger > li:after
      background-image radial-gradient(farthest-side at left center, $bd-danger, transparent)

    &.ui-warn > li:after
      background-image radial-gradient(farthest-side at left center, $bd-warn, transparent)
