// Core
//
// **Position:**
//
// + `.amid-45`
// + `.amid-90`
// + `.amid-135`
// + `.amid-180`
// + `.amid-225`
// + `.amid-270`
// + `.amid-315`
// + `.amid-360`
//
// Styleguide 5.26.1
.caret
  height 0
  width 0
  display inline-block
  vertical-align middle

  border-width round($ht-pygmy * .15)
  margin-bottom round(($te - @border-width) / 2)

  &.amid-45
  &.amid-90
  &.amid-135
  &.amid-180
  &.amid-225
  &.amid-270
  &.amid-315
  &.amid-360
    margin-bottom 0

  &.amid-45
    @extend $l-amid-45

  &.amid-90
    @extend $l-amid-90

  &.amid-135
    @extend $l-amid-135

  &.amid-180
    @extend $l-amid-180

  &.amid-225
    @extend $l-amid-225

  &.amid-270
    @extend $l-amid-270

  &.amid-315
    @extend $l-amid-315

  &.amid-360
    @extend $l-amid-360


