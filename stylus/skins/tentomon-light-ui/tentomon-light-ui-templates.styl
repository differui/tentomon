// Majority ui
// ============================================================================
$basis$()
  @extend $UI

  $basis-start               = $te-basis
  $basis-end                 = $end-basis

  color $black
  border-color $bd-basis
  background-color $bg-basis

  $$linear-gradient($basis-start, $basis-end)
  $$text-highlight()

$info$()
  @extend $UI

  $info-start                = $te-info
  $info-end                  = $end-info

  border-color $bd-info
  background-color $bg-info

  $$linear-gradient($info-start, $info-end)

$warn$()
  @extend $UI

  $warn-start                = $te-warn
  $warn-end                  = $end-warn

  border-color $bd-warn
  background-color $bg-warn

  $$linear-gradient($warn-start, $warn-end)

$safe$()
  @extend $UI

  $safe-start                = $te-safe
  $safe-end                  = $end-safe

  border-color $bd-safe
  background-color $bg-safe

  $$linear-gradient($safe-start, $safe-end)

$danger$()
  @extend $UI

  $danger-start              = $te-danger
  $danger-end                = $end-danger

  border-color $bd-danger
  background-color $bg-danger

  $$linear-gradient($danger-start, $danger-end)

$dark$()
  @extend $UI

  border-color $black
  background-color $black

  $$top-inner-shadow(0, 0, transparent)

// focused ui
// ============================================================================
$basis-focused$()
  @extend $UI-FOCUS

$info-focused$()
  @extend $UI-FOCUS

$warn-focused$()
  @extend $UI-FOCUS

$safe-focused$()
  @extend $UI-FOCUS

$danger-focused$()
  @extend $UI-FOCUS

$dark-focused$()
  @extend $UI-FOCUS

// active ui
// ============================================================================
$basis-active$()
  @extend $UI-ACTIVE

$info-active$()
  @extend $UI-ACTIVE

$warn-active$()
  @extend $UI-ACTIVE

$safe-active$()
  @extend $UI-ACTIVE

$danger-active$()
  @extend $UI-ACTIVE

$dark-active$()
  null

// disabled ui
// ============================================================================
$basis-disabled$()
  @extend $UI-DISABLE

  color $grey-light

$info-disabled$()
  @extend $UI-DISABLE

  $info-disabled-start       = lighten($te-info, $deg-lighter * 2)
  $info-disabled-end         = lighten($te-info, $deg-lighter * 2 - 2%)

  $$linear-gradient($info-disabled-start, $info-disabled-end)

$warn-disabled$()
  @extend $UI-DISABLE

  $warn-disabled-start       = lighten($te-warn, $deg-lighter * 2)
  $warn-disabled-end         = lighten($te-warn, $deg-lighter * 2 - 2%)

  $$linear-gradient($warn-disabled-start, $warn-disabled-end)

$safe-disabled$()
  @extend $UI-DISABLE

  $safe-disabled-start       = lighten($te-safe, $deg-lighter * 2)
  $safe-disabled-end         = lighten($te-safe, $deg-lighter * 2 - 2%)

  $$linear-gradient($safe-disabled-start, $safe-disabled-end)

$danger-disabled$()
  @extend $UI-DISABLE

  $danger-disabled-start     = lighten($te-danger, $deg-lighter * 2)
  $danger-disabled-end       = lighten($te-danger, $deg-lighter * 2 - 2%)

  $$linear-gradient($danger-disabled-start, $danger-disabled-end)

$dark-disabled$()
  @extend $UI-DISABLE

  color $grey-light