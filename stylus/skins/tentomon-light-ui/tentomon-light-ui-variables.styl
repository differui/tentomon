// Degrees
// ============================================================================
$deg-dark                    = 8%
$deg-darker                  = 13%
$deg-light                   = 8%
$deg-lighter                 = 13%

// Majority Color
// ============================================================================
$te-basis                    = #f7f7f7
$te-info                     = #508cc7
$te-safe                     = #60b044
$te-danger                   = #d1443d
$te-warn                     = #e9cf14

// Grey Color
// ============================================================================
$te-white                    = #ffffff
$te-black                    = #323232
$grey                        = #dcdcdc
$grey-light                  = #e1e1e1
$grey-lighter                = #f1f1f1
$grey-dark                   = #d5d5d5
$grey-darker                 = #c5c5c5

// Link Color
// ============================================================================
$link-static                 = $te-safe
$link-disabled               = $grey-light

// Ends Color
// ============================================================================
$end-basis                   = darken($te-basis, $deg-dark)
$end-info                    = darken($te-info, $deg-darker * 1.5)
$end-safe                    = darken($te-safe, $deg-darker * 1.5)
$end-danger                  = darken($te-danger, $deg-darker * 1.5)
$end-warn                    = darken($te-warn, $deg-darker * 1.5)

// Disabled Color
// ============================================================================
$dis-basis                   = $te-basis
$dis-info                    = lighten($te-info, $deg-lighter * 2)
$dis-safe                    = lighten($te-safe, $deg-lighter * 2)
$dis-danger                  = lighten($te-danger, $deg-lighter * 2)
$dis-warn                    = lighten($te-warn, $deg-lighter * 2)

// Border Color
// ============================================================================
$bd-white                    = $te-white
$bd-black                    = $te-black
$bd-light                    = $grey-light
$bd-dark                     = $grey-dark
$bd-basis                    = $bd-dark
$bd-info                     = darken($te-info, $deg-dark)
$bd-safe                     = darken($te-safe, $deg-dark)
$bd-danger                   = darken($te-danger, $deg-dark)
$bd-warn                     = darken($te-warn, $deg-dark)

// Background Color
// ============================================================================
$bg-white                    = $te-white
$bg-black                    = $te-black
$bg-light                    = lighten($grey-light, 80%)
$bg-dark                     = lighten($grey-dark, 50%)
$bg-basis                    = darken($te-basis, 3%)
$bg-info                     = $$translucent($te-info, 10)
$bg-safe                     = $$translucent($te-safe, 10)
$bg-danger                   = $$translucent($te-danger, 10)
$bg-warn                     = $$translucent($te-warn, 10)

// Translucent Color
// ============================================================================
$translucent-white           = $$translucent($te-white, 90%)
$translucent-black           = $$translucent($te-black, 40%)

// Shadow Color
// ============================================================================
$shadow-light                = $$translucent($te-black, 20%)
$shadow-dark                 = $$translucent($te-black, 50%)

// Highlight Color
// ============================================================================
$highlight-light             = $$translucent($te-white, 10%)
$highlight-dark              = $$translucent($te-white, 50%)
