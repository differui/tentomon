// Degrees
// ============================================================================
$deg-dark                    = 8%
$deg-darker                  = 13%
$deg-light                   = 8%
$deg-lighter                 = 13%

// Majority Color
// ============================================================================
$te-basis                    = #f7f7f7
$te-info                     = #508cc7
$te-safe                     = #60b044
$te-danger                   = #d1443d
$te-warn                     = #e9cf14

// Grey Color
// ============================================================================
$white                       = #ffffff
$black                       = #323232
$grey                        = #dcdcdc
$grey-light                  = #e1e1e1
$grey-heavy                  = #d5d5d5

// Ends Color
// ============================================================================
$end-basis                   = darken($te-basis, $deg-dark)
$end-info                    = darken($te-info, $deg-darker * 1.5)
$end-safe                    = darken($te-safe, $deg-darker * 1.5)
$end-danger                  = darken($te-danger, $deg-darker * 1.5)
$end-warn                    = darken($te-warn, $deg-darker * 1.5)

// Disabled Color
// ============================================================================
$te-basis-disabled           = $te-basis
$te-info-disabled            = lighten($te-info, $deg-lighter * 2)
$te-safe-disabled            = lighten($te-safe, $deg-lighter * 2)
$te-danger-disabled          = lighten($te-danger, $deg-lighter * 2)
$te-warn-disabled            = lighten($te-warn, $deg-lighter * 2)

// Border Color
// ============================================================================
$bd-light                    = $grey-light
$bd-heavy                    = $grey-heavy
$bd-basis                    = $bd-heavy
$bd-info                     = darken($te-info, $deg-dark)
$bd-safe                     = darken($te-safe, $deg-dark)
$bd-danger                   = darken($te-danger, $deg-dark)
$bd-warn                     = darken($te-warn, $deg-dark)

// Background Color
// ============================================================================
$bg-light                    = lighten($grey-light, 80%)
$bg-heavy                    = lighten($grey-heavy, 50%)
$bg-basis                    = darken($te-basis, 3%)
$bg-info                     = $$translucent($te-info, 10)
$bg-safe                     = $$translucent($te-safe, 10)
$bg-danger                   = $$translucent($te-danger, 10)
$bg-warn                     = $$translucent($te-warn, 10)

// Others
// ============================================================================
$translucent-white           = $$translucent($white, 90%)
$translucent-black           = $$translucent($black, 40%)

$shadow-light                = $$translucent($black, 20%)
$shadow-heavy                = $$translucent($black, 50%)

$highlight-light             = $$translucent($white, 10%)
$highlight-heavy             = $$translucent($white, 50%)
